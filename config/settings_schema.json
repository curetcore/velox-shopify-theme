[
  {
    "name": "theme_info",
    "theme_name": "Velox",
    "theme_version": "1.0.0",
    "theme_author": "Ronaldo Paulino",
    "theme_documentation_url": "https://github.com/curetcore/velox-shopify-theme",
    "theme_support_url": "https://github.com/curetcore/velox-shopify-theme/issues"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
      {
        "type": "font_picker",
        "id": "type_secondary_font",
        "default": "work_sans_n6",
        "label": "t:general.secondary"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "header",
        "content": "t:general.primary"
      },
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "header",
        "content": "Accent"
      },
      {
        "type": "color",
        "id": "accent_color",
        "default": "#000000",
        "label": "Accent color",
        "info": "Color principal para botones, enlaces y elementos destacados"
      },
      {
        "type": "color",
        "id": "accent_foreground",
        "default": "#FFFFFF",
        "label": "Accent foreground",
        "info": "Color del texto sobre elementos accent"
      },
      {
        "type": "header",
        "content": "t:general.secondary"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "default": "#F5F5F5",
        "label": "Secondary color",
        "info": "Color para fondos secundarios y elementos sutiles"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
      {
        "type": "header",
        "content": "Section animations"
      },
      {
        "type": "checkbox",
        "id": "enable_section_animations",
        "label": "Enable section load animations",
        "default": true,
        "info": "Sections will animate as they enter the viewport"
      },
      {
        "type": "select",
        "id": "animation_style",
        "label": "Animation style",
        "options": [
          {
            "value": "fade",
            "label": "Fade"
          },
          {
            "value": "fade-up",
            "label": "Fade up"
          },
          {
            "value": "fade-down",
            "label": "Fade down"
          },
          {
            "value": "fade-left",
            "label": "Fade from left"
          },
          {
            "value": "fade-right",
            "label": "Fade from right"
          },
          {
            "value": "zoom-in",
            "label": "Zoom in"
          },
          {
            "value": "zoom-out",
            "label": "Zoom out"
          },
          {
            "value": "flip",
            "label": "Flip"
          }
        ],
        "default": "fade-up"
      },
      {
        "type": "range",
        "id": "animation_duration",
        "label": "Animation duration",
        "min": 200,
        "max": 1200,
        "step": 50,
        "default": 600,
        "unit": "ms"
      },
      {
        "type": "range",
        "id": "animation_delay",
        "label": "Stagger delay between elements",
        "min": 0,
        "max": 300,
        "step": 25,
        "default": 100,
        "unit": "ms",
        "info": "Delay between each animated element"
      },
      {
        "type": "select",
        "id": "animation_easing",
        "label": "Animation easing",
        "options": [
          {
            "value": "ease",
            "label": "Ease (default)"
          },
          {
            "value": "ease-in",
            "label": "Ease in"
          },
          {
            "value": "ease-out",
            "label": "Ease out"
          },
          {
            "value": "ease-in-out",
            "label": "Ease in-out"
          },
          {
            "value": "cubic-bezier(0.25, 0.46, 0.45, 0.94)",
            "label": "Smooth"
          },
          {
            "value": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
            "label": "Bouncy"
          }
        ],
        "default": "ease-out"
      },
      {
        "type": "header",
        "content": "Animation behavior"
      },
      {
        "type": "checkbox",
        "id": "animation_repeat",
        "label": "Repeat animation on scroll",
        "default": false,
        "info": "Re-animate sections when scrolling back into view"
      },
      {
        "type": "range",
        "id": "animation_threshold",
        "label": "Animation trigger point",
        "min": 0,
        "max": 50,
        "step": 5,
        "default": 10,
        "unit": "%",
        "info": "How much of the element should be visible before animating"
      },
      {
        "type": "header",
        "content": "Accessibility"
      },
      {
        "type": "checkbox",
        "id": "respect_reduced_motion",
        "label": "Respect reduced motion preference",
        "default": true,
        "info": "Disable animations for users who prefer reduced motion"
      }
    ]
  },
  {
    "name": "Typography advanced",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "range",
        "id": "heading_line_height",
        "label": "Heading line height",
        "min": 1,
        "max": 1.8,
        "step": 0.1,
        "default": 1.2
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "label": "Heading letter spacing",
        "min": -0.1,
        "max": 0.2,
        "step": 0.1,
        "default": 0,
        "unit": "em"
      },
      {
        "type": "select",
        "id": "heading_text_transform",
        "label": "Heading text transform",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "uppercase",
            "label": "Uppercase"
          },
          {
            "value": "lowercase",
            "label": "Lowercase"
          },
          {
            "value": "capitalize",
            "label": "Capitalize"
          }
        ],
        "default": "none"
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "range",
        "id": "body_line_height",
        "label": "Body line height",
        "min": 1.2,
        "max": 2,
        "step": 0.05,
        "default": 1.6
      },
      {
        "type": "range",
        "id": "body_letter_spacing",
        "label": "Body letter spacing",
        "min": -0.02,
        "max": 0.1,
        "step": 0.01,
        "default": 0,
        "unit": "em"
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "header",
        "content": "Button style"
      },
      {
        "type": "range",
        "id": "button_corner_radius",
        "label": "Button corner radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "default": 4,
        "unit": "px"
      },
      {
        "type": "select",
        "id": "button_hover_effect",
        "label": "Button hover effect",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "darken",
            "label": "Darken"
          },
          {
            "value": "glow",
            "label": "Glow"
          },
          {
            "value": "slide-left",
            "label": "Slide from left"
          },
          {
            "value": "slide-up",
            "label": "Slide from bottom"
          },
          {
            "value": "arrow",
            "label": "Arrow reveal"
          }
        ],
        "default": "darken"
      },
      {
        "type": "select",
        "id": "button_text_transform",
        "label": "Button text transform",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "uppercase",
            "label": "Uppercase"
          }
        ],
        "default": "none"
      },
      {
        "type": "range",
        "id": "button_font_weight",
        "label": "Button font weight",
        "min": 400,
        "max": 700,
        "step": 100,
        "default": 500
      }
    ]
  },
  {
