{% comment %}
  Skeleton Product Card
  Loading placeholder for product cards

  Usage: {% render 'skeleton-product-card' %}
{% endcomment %}

<div class="skeleton-product-card tw-animate-pulse">
  {%- comment -%} Image placeholder {%- endcomment -%}
  <div class="tw-aspect-product tw-w-full tw-bg-velox-200 tw-rounded-lg"></div>

  {%- comment -%} Content placeholders {%- endcomment -%}
  <div class="tw-mt-4 tw-space-y-2">
    {%- comment -%} Title {%- endcomment -%}
    <div class="tw-h-4 tw-bg-velox-200 tw-rounded tw-w-3/4"></div>
    
    {%- comment -%} Price {%- endcomment -%}
    <div class="tw-h-4 tw-bg-velox-200 tw-rounded tw-w-1/3"></div>
    
    {%- comment -%} Swatches {%- endcomment -%}
    <div class="tw-flex tw-gap-1 tw-mt-2">
      <div class="tw-w-5 tw-h-5 tw-bg-velox-200 tw-rounded-full"></div>
      <div class="tw-w-5 tw-h-5 tw-bg-velox-200 tw-rounded-full"></div>
      <div class="tw-w-5 tw-h-5 tw-bg-velox-200 tw-rounded-full"></div>
    </div>
  </div>
</div>
