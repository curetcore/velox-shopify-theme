{% comment %}
  Quick Add Modal
  Allows fast adding to cart without leaving current page
{% endcomment %}

{%- comment -%} Modal Overlay {%- endcomment -%}
<div 
  class="tw-fixed tw-inset-0 tw-z-50 tw-hidden"
  data-quick-add-modal
  role="dialog"
  aria-modal="true"
  aria-label="Quick add to cart"
>
  {%- comment -%} Backdrop {%- endcomment -%}
  <div 
    class="tw-absolute tw-inset-0 tw-bg-black/50 tw-backdrop-blur-sm"
    data-quick-add-overlay
  ></div>

  {%- comment -%} Modal Content {%- endcomment -%}
  <div class="tw-absolute tw-top-1/2 tw-left-1/2 tw--translate-x-1/2 tw--translate-y-1/2 tw-w-full tw-max-w-lg tw-max-h-[90vh] tw-overflow-y-auto">
    <div class="tw-bg-white tw-rounded-xl tw-shadow-2xl tw-mx-4 tw-relative">
      {%- comment -%} Close Button {%- endcomment -%}
      <button 
        type="button"
        class="tw-absolute tw-top-3 tw-right-3 tw-z-10 tw-w-8 tw-h-8 tw-flex tw-items-center tw-justify-center tw-rounded-full tw-bg-velox-100 hover:tw-bg-velox-200 tw-transition-colors"
        data-quick-add-close
        aria-label="Close"
      >
        {% render 'icon', name: 'x', class: 'tw-w-5 tw-h-5' %}
      </button>

      {%- comment -%} Content Container {%- endcomment -%}
      <div class="tw-p-6" data-quick-add-content>
        {%- comment -%} Content loaded via AJAX {%- endcomment -%}
      </div>
    </div>
  </div>
</div>
