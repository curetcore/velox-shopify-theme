{
  "name": "velox-shopify-theme",
  "version": "1.0.0",
  "description": "Velox - Premium Shopify theme for fashion/footwear stores",
  "author": "Ronaldo Paulino",
  "license": "MIT",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/tailwind.css -o ./assets/velox.css --watch",
    "build": "npx tailwindcss -i ./src/tailwind.css -o ./assets/velox.css --minify",
    "theme:dev": "shopify theme dev --store=YOUR_STORE.myshopify.com",
    "theme:push": "shopify theme push",
    "theme:pull": "shopify theme pull",
    "lint": "shopify theme check"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49"
  }
}
