{
    "sections": {
        "main": {
            "type": "collection",
            "settings": {
                "header_style": "banner",
                "grid_style": "grid_4",
                "products_per_page": 16,
                "show_vendor": true,
                "show_quick_view": true,
                "show_swatches": true,
                "show_second_image": true,
                "enable_filtering": true,
                "filter_style": "sidebar",
                "enable_sorting": true,
                "color_scheme": "light"
            }
        },
        "comparison": {
            "type": "comparison-slider",
            "settings": {
                "heading": "Before & After",
                "caption": "See the difference quality makes",
                "label_before": "Fake",
                "label_after": "Authentic",
                "max_width": 600
            }
        },
        "trust_badges": {
            "type": "trust-badges",
            "blocks": {
                "badge_1": {
                    "type": "badge",
                    "settings": {
                        "icon": "shield-check",
                        "title": "Authenticated",
                        "text": "Verified genuine"
                    }
                },
                "badge_2": {
                    "type": "badge",
                    "settings": {
                        "icon": "truck",
                        "title": "Fast Shipping",
                        "text": "Same day dispatch"
                    }
                },
                "badge_3": {
                    "type": "badge",
                    "settings": {
                        "icon": "arrow-path",
                        "title": "Easy Returns",
                        "text": "30-day policy"
                    }
                }
            },
            "block_order": [
                "badge_1",
                "badge_2",
                "badge_3"
            ],
            "settings": {
                "layout": "horizontal",
                "background_color": "secondary"
            }
        }
    },
    "order": [
        "main",
        "comparison",
        "trust_badges"
    ]
