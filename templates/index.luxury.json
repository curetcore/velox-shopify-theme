                "collection_3": {
                    "type": "collection",
                    "settings": {
                        "title": "Loafers"
                    }
                },
                "collection_4": {
                    "type": "collection",
                    "settings": {
                        "title": "Boots"
                    }
                }
            },
            "block_order": [
                "collection_1",
                "collection_2",
                "collection_3",
                "collection_4"
            ],
            "settings": {
                "title": "t:templates.index_luxury.collection_list.title",
                "description": "Discover our signature styles, each crafted to perfection",
                "columns": 4,
                "image_ratio": "portrait",
                "show_view_all": true,
                "button_text": "All Collections",
                "background_color": "secondary"
            }
        },
        "image_with_text_1": {
            "type": "image-with-text",
            "settings": {
                "image_position": "left",
                "image_ratio": "square",
                "eyebrow": "Our Heritage",
                "title": "t:templates.index_luxury.image_with_text_1.title",
                "text": "t:templates.index_luxury.image_with_text_1.text",
                "button_text": "Our Story",
                "button_url": "shopify://pages/about",
                "button_style": "secondary",
                "background_color": "default"
            }
        },
        "featured_product": {
            "type": "featured-product",
            "settings": {
                "title_override": "Signature Piece",
                "description_override": "Our most sought-after design, representing the pinnacle of Italian craftsmanship",
                "image_position": "right",
                "show_vendor": false,
                "show_thumbnails": true,
                "show_payment_icons": true,
                "background_color": "secondary"
            }
        },
        "image_with_text_2": {
            "type": "image-with-text",
            "settings": {
                "image_position": "right",
                "image_ratio": "landscape",
