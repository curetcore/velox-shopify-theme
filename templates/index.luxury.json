{
    "sections": {
        "slideshow": {
            "type": "slideshow",
            "blocks": {
                "slide_1": {
                    "type": "slide",
                    "settings": {
                        "subheading": "Autumn/Winter 2025",
                        "heading": "t:templates.index_luxury.hero.slide_1_heading",
                        "text": "t:templates.index_luxury.hero.slide_1_text",
                        "button_label": "Shop Collection",
                        "button_link": "shopify://collections/new-arrivals",
                        "button_label_2": "Our Heritage",
                        "button_link_2": "shopify://pages/about",
                        "text_color": "light",
                        "overlay_opacity": 30
                    }
                },
                "slide_2": {
                    "type": "slide",
                    "settings": {
                        "subheading": "Artisan Craftsmanship",
                        "heading": "t:templates.index_luxury.hero.slide_2_heading",
                        "text": "t:templates.index_luxury.hero.slide_2_text",
                        "button_label": "Discover",
                        "button_link": "shopify://collections/handmade",
                        "text_color": "light",
                        "overlay_opacity": 40
                    }
                },
                "slide_3": {
                    "type": "slide",
                    "settings": {
                        "subheading": "Exclusive Collection",
                        "heading": "t:templates.index_luxury.hero.slide_3_heading",
                        "text": "t:templates.index_luxury.hero.slide_3_text",
                        "button_label": "Shop Oxfords",
                        "button_link": "shopify://collections/oxfords",
                        "text_color": "light",
                        "overlay_opacity": 30
                    }
                }
            },
            "block_order": [
                "slide_1",
                "slide_2",
                "slide_3"
            ],
            "settings": {
                "autoplay": true,
                "autoplay_speed": 6,
                "show_arrows": true,
                "show_dots": true,
                "slide_height": "large"
            }
        },
        "rich_text_banner": {
            "type": "rich-text",
            "settings": {
                "background_color": "accent",
                "text_alignment": "center",
                "narrow_content": false,
                "text": "t:templates.index_luxury.announcement.text"
            }
        },
        "featured_collection": {
            "type": "featured-collection",
            "settings": {
                "title": "t:templates.index_luxury.featured_collection.title",
                "description": "The latest additions to our distinguished collection",
                "layout": "grid",
                "products_to_show": 8,
                "columns": 4,
                "show_vendor": false,
                "show_swatches": true,
                "show_second_image": true,
                "show_quick_view": true,
                "show_view_all": true,
                "button_text": "View All",
                "button_style": "secondary",
                "background_color": "default"
            }
        },
        "collection_list": {
            "type": "collection-list",
            "blocks": {
                "collection_1": {
                    "type": "collection",
                    "settings": {
                        "title": "Oxfords"
                    }
                },
                "collection_2": {
                    "type": "collection",
                    "settings": {
