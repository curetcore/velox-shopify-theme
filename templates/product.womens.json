{
    "sections": {
        "main": {
            "type": "product",
            "blocks": {
                "estimated_shipping": {
                    "type": "estimated_shipping",
                    "settings": {
                        "min_days": 2,
                        "max_days": 5,
                        "exclude_weekends": true,
                        "prefix": "Estimated delivery:"
                    }
                },
                "trust_badges": {
                    "type": "trust_badges",
                    "settings": {
                        "icon_1": "heart",
                        "text_1": "Sustainable Materials",
                        "icon_2": "truck",
                        "text_2": "Free Shipping $75+",
                        "icon_3": "arrow-path",
                        "text_3": "30 Day Returns",
                        "icon_4": "globe-americas",
                        "text_4": "Carbon Neutral"
                    }
                },
                "size_chart": {
                    "type": "size_chart",
                    "settings": {
                        "button_text": "Size Guide",
                        "title": "Women's Size Guide",
                        "description": "Our pieces are designed for a relaxed, comfortable fit.",
                        "show_table": true,
                        "size_xs": "XS: Bust 32\", Waist 24\", Hips 34\"",
                        "size_s": "S: Bust 34\", Waist 26\", Hips 36\"",
                        "size_m": "M: Bust 36\", Waist 28\", Hips 38\"",
                        "size_l": "L: Bust 38\", Waist 30\", Hips 40\"",
                        "size_xl": "XL: Bust 40\", Waist 32\", Hips 42\"",
                        "measurement_tips": "Measure yourself wearing light clothing. Compare to a garment that fits you well."
                    }
                },
                "product_reviews": {
                    "type": "product_reviews",
                    "settings": {
                        "show_write_review": true,
                        "write_review_text": "Write a Review",
                        "show_no_reviews": true,
                        "no_reviews_text": "No reviews yet. Be the first!"
                    }
                }
            },
            "block_order": [
                "estimated_shipping",
                "trust_badges",
                "size_chart",
                "product_reviews"
            ],
            "settings": {
                "layout_style": "gallery",
                "gallery_position": "left",
                "enable_zoom": true,
                "zoom_type": "hover",
                "zoom_scale": 2,
                "show_breadcrumbs": true,
                "breadcrumb_style": "slashes",
                "swatch_size": "large",
                "show_vendor": false,
                "show_reviews": true,
                "show_quantity": true,
                "show_dynamic_checkout": true,
                "show_share": true,
                "description_style": "tabs",
                "show_sticky_atc": true
            }
        },
        "multicolumn": {
            "type": "multicolumn",
            "blocks": {
                "column_1": {
                    "type": "column",
                    "settings": {
                        "title": "Premium Fabric",
                        "text": "Made from organic cotton and sustainable materials."
                    }
                },
                "column_2": {
                    "type": "column",
                    "settings": {
                        "title": "Perfect Fit",
                        "text": "Designed by women, for women. Flattering every body type."
                    }
                },
                "column_3": {
                    "type": "column",
                    "settings": {
                        "title": "Easy Care",
                        "text": "Machine washable. Wrinkle-resistant. Ready to wear."
                    }
                }
            },
            "block_order": [
                "column_1",
                "column_2",
                "column_3"
            ],
            "settings": {
                "title": "Why You'll Love It",
                "columns": 3,
                "background_color": "secondary"
            }
        },
        "related-products": {
            "type": "related-products",
            "settings": {
                "heading": "Complete the Look",
                "products_to_show": 4,
                "columns_desktop": "4",
                "columns_mobile": "2",
                "show_vendor": false,
                "show_quick_view": true,
                "show_view_all": true
            }
        },
        "recently_viewed": {
            "type": "recently-viewed",
            "settings": {
                "heading": "Recently Viewed",
                "products_to_show": 4,
                "columns": 4
            }
        }
    },
    "order": [
        "main",
        "multicolumn",
        "related-products",
        "recently_viewed"
    ]
}