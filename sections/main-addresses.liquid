                    <div class="velox-form-group">
                      <label for="AddressPhone{{ address.id }}" class="velox-form-label">
                        {{ 'customer.addresses.phone' | t | default: 'Phone' }}
                      </label>
                      <input
                        type="tel"
                        id="AddressPhone{{ address.id }}"
                        name="address[phone]"
                        class="velox-form-input"
                        value="{{ address.phone }}"
                        autocomplete="tel"
                      >
                    </div>

                    <div class="velox-form-group velox-form-group--full">
                      <div class="velox-form-checkbox-group">
                        <input
                          type="checkbox"
                          id="AddressDefault{{ address.id }}"
                          name="address[default]"
                          value="1"
                          class="velox-form-checkbox"
                          {% if address == customer.default_address %}checked{% endif %}
                        >
                        <label for="AddressDefault{{ address.id }}" class="velox-form-checkbox-label">
                          {{ 'customer.addresses.set_default' | t | default: 'Set as default address' }}
                        </label>
                      </div>
                    </div>
                  </div>

                  <div class="velox-address-form__actions">
                    <button type="button" class="velox-btn-cancel" data-address-cancel="{{ address.id }}">
                      {{ 'customer.addresses.cancel' | t | default: 'Cancel' }}
                    </button>
                    <button type="submit" class="velox-btn-submit">
                      {{ 'customer.addresses.update' | t | default: 'Update address' }}
                    </button>
                  </div>
                {% endform %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="velox-addresses__empty">
          <svg class="velox-addresses__empty-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
          <h3 class="velox-addresses__empty-title">
            {{ 'customer.addresses.no_addresses' | t | default: 'No addresses yet' }}
          </h3>
          <p class="velox-addresses__empty-text">
            {{ 'customer.addresses.no_addresses_message' | t | default: 'Add a shipping address to get started.' }}
          </p>
        </div>
      {% endif %}

    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Toggle address forms
    document.querySelectorAll('[data-address-toggle]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        const formId = this.getAttribute('data-address-toggle');
        const form = document.querySelector('[data-address-form="' + formId + '"]');
        if (form) {
          form.classList.toggle('is-active');
        }
      });
    });

    // Cancel buttons
    document.querySelectorAll('[data-address-cancel]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        const formId = this.getAttribute('data-address-cancel');
        const form = document.querySelector('[data-address-form="' + formId + '"]');
        if (form) {
          form.classList.remove('is-active');
        }
      });
    });

    // Delete buttons
    document.querySelectorAll('[data-address-delete]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        const confirmMessage = this.getAttribute('data-confirm-message');
        if (confirm(confirmMessage)) {
          const addressId = this.getAttribute('data-address-delete');
          Shopify.postLink('/account/addresses/' + addressId, {
            parameters: { _method: 'delete' }
          });
        }
      });
    });

    // Country/Province selectors
    if (typeof Shopify !== 'undefined' && Shopify.CountryProvinceSelector) {
      document.querySelectorAll('[data-address-country-select]').forEach(function(select) {
        const formId = select.getAttribute('data-form-id');
        const provinceSelect = document.querySelector('[data-address-province-select][data-form-id="' + formId + '"]');
        if (provinceSelect) {
          new Shopify.CountryProvinceSelector(
            select.id,
            provinceSelect.id,
            { hideElement: provinceSelect.parentElement }
          );
        }
      });
    }
  });
</script>

