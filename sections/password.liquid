{% style %}
  /* === Password Section Styles === */

  .velox-password {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    position: relative;
    font-family: var(--font-primary--family);
  }

  .velox-password--light {
    background: linear-gradient(135deg, var(--color-background) 0%, var(--color-secondary) 100%);
    color: var(--color-foreground);
  }

  .velox-password--dark {
    background: linear-gradient(135deg, #111827 0%, #1f2937 100%);
    color: #f9fafb;
  }

  .velox-password--with-image {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .velox-password--with-image::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
  }

  .velox-password__container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: 28rem;
    text-align: center;
  }

  /* Logo */
  .velox-password__logo {
    margin-bottom: 2rem;
  }

  .velox-password__logo-img {
    height: 3rem;
    width: auto;
    margin: 0 auto;
  }

  .velox-password__logo-text {
    font-size: 1.875rem;
    font-weight: 700;
    font-family: var(--font-heading--family);
  }

  .velox-password--dark .velox-password__logo-text,
  .velox-password--with-image .velox-password__logo-text {
    color: #f9fafb;
  }

  /* Content card */
  .velox-password__card {
    background: var(--color-background);
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .velox-password--dark .velox-password__card {
    background: #1f2937;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Icon */
  .velox-password__icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-accent) 10%, transparent);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .velox-password__icon svg {
    width: 2rem;
    height: 2rem;
    color: var(--color-accent);
  }

  /* Title and message */
  .velox-password__title {
    font-size: 1.5rem;
    font-weight: 700;
    font-family: var(--font-heading--family);
    margin-bottom: 0.5rem;
    color: var(--color-foreground);
  }

  .velox-password--dark .velox-password__title {
    color: #f9fafb;
  }

  .velox-password__message {
    font-size: 0.9375rem;
    color: var(--color-foreground-muted, #6b7280);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .velox-password--dark .velox-password__message {
    color: #9ca3af;
  }

  /* Form */
  .velox-password__form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .velox-password__field {
    text-align: left;
  }

  .velox-password__label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: var(--color-foreground);
  }

  .velox-password--dark .velox-password__label {
    color: #d1d5db;
  }

  .velox-password__input {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 1px solid var(--color-border, rgba(0,0,0,0.15));
    border-radius: 0.5rem;
    background: var(--color-background);
    color: var(--color-foreground);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .velox-password--dark .velox-password__input {
    background: #374151;
    border-color: rgba(255, 255, 255, 0.1);
    color: #f9fafb;
  }

  .velox-password__input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-accent) 20%, transparent);
  }

  .velox-password__input::placeholder {
    color: #9ca3af;
  }

  .velox-password__submit {
    width: 100%;
    padding: 0.75rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: white;
    background: var(--color-accent);
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .velox-password__submit:hover {
    background: color-mix(in srgb, var(--color-accent) 90%, black);
  }

  /* Errors */
  .velox-password__errors {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
    margin-bottom: 1rem;
    color: #dc2626;
    font-size: 0.875rem;
    text-align: left;
  }

  .velox-password--dark .velox-password__errors {
    background: rgba(239, 68, 68, 0.2);
    color: #fca5a5;
  }

  /* Admin link */
  .velox-password__admin {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border, rgba(0,0,0,0.1));
  }

  .velox-password--dark .velox-password__admin {
    border-top-color: rgba(255, 255, 255, 0.1);
  }

  .velox-password__admin-text {
    font-size: 0.875rem;
    color: var(--color-foreground-muted, #6b7280);
  }

  .velox-password--dark .velox-password__admin-text {
    color: #9ca3af;
  }

  .velox-password__admin-link {
    color: var(--color-accent);
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s;
  }

  .velox-password__admin-link:hover {
    text-decoration: underline;
  }

  /* Social links */
  .velox-password__social {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .velox-password__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: var(--color-secondary);
    color: var(--color-foreground);
    transition: background-color 0.2s, transform 0.2s;
  }

  .velox-password--dark .velox-password__social-link,
  .velox-password--with-image .velox-password__social-link {
    background: rgba(255, 255, 255, 0.1);
    color: #f9fafb;
  }

  .velox-password__social-link:hover {
    background: var(--color-accent);
    color: white;
    transform: scale(1.1);
  }

  .velox-password__social-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Footer */
  .velox-password__footer {
    position: absolute;
    bottom: 1.5rem;
    left: 0;
    right: 0;
    text-align: center;
    font-size: 0.75rem;
    color: var(--color-foreground-muted, #6b7280);
  }

  .velox-password--dark .velox-password__footer,
  .velox-password--with-image .velox-password__footer {
    color: rgba(255, 255, 255, 0.5);
  }

  .velox-password__footer a {
    color: inherit;
  }

  /* Responsive */
  @media (min-width: 640px) {
    .velox-password {
      padding: 3rem 1.5rem;
    }

    .velox-password__card {
      padding: 2.5rem;
    }

    .velox-password__title {
      font-size: 1.75rem;
    }
  }
{% endstyle %}

<section
  class="velox-password velox-password--{{ color_scheme }}{% if background_image != blank %} velox-password--with-image{% endif %}"
  {% if background_image != blank %}
    style="background-image: url('{{ background_image | image_url: width: 1920 }}')"
  {% endif %}
>
  <div class="velox-password__container">
    {%- comment -%} Logo {%- endcomment -%}
    <div class="velox-password__logo">
      {%- if settings.logo -%}
        {{ settings.logo | image_url: width: 300 | image_tag: class: 'velox-password__logo-img', alt: shop.name }}
      {%- else -%}
        <span class="velox-password__logo-text">{{ shop.name }}</span>
      {%- endif -%}
    </div>

    {%- comment -%} Card {%- endcomment -%}
    <div class="velox-password__card">
      {%- comment -%} Icon {%- endcomment -%}
      <div class="velox-password__icon">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
        </svg>
      </div>

      {%- comment -%} Title {%- endcomment -%}
      <h1 class="velox-password__title">{{ 'password.title' | t }}</h1>

      {%- comment -%} Message {%- endcomment -%}
      {%- if shop.password_message != blank -%}
        <p class="velox-password__message">{{ shop.password_message }}</p>
      {%- else -%}
        <p class="velox-password__message">{{ 'password.coming_soon' | t }}</p>
      {%- endif -%}

      {%- comment -%} Form {%- endcomment -%}
      {% form 'storefront_password', class: 'velox-password__form' %}
        {%- if form.errors -%}
          <div class="velox-password__errors">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        <div class="velox-password__field">
          <label for="password-input" class="velox-password__label">
            {{ 'password.password' | t }}
          </label>
          <input
            type="password"
            name="password"
            id="password-input"
            class="velox-password__input"
            placeholder="{{ 'password.placeholder' | t }}"
            required
            autocomplete="off"
          >
        </div>

        <button type="submit" class="velox-password__submit">
          {{ 'password.enter' | t }}
        </button>
      {% endform %}

      {%- comment -%} Admin link {%- endcomment -%}
      <div class="velox-password__admin">
        <p class="velox-password__admin-text">
          {{ 'password.admin_text' | t }}
          <a href="/admin" class="velox-password__admin-link">{{ 'password.admin_link' | t }}</a>
        </p>
      </div>
    </div>

