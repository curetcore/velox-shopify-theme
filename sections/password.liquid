          </a>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>

  {%- comment -%} Footer {%- endcomment -%}
  <footer class="velox-password__footer">
    <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'general.footer.copyright' | t }}</p>
  </footer>
</section>

{% schema %}
{
  "name": "t:password.name",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:settings.color_scheme.label",
      "options": [
        {
          "value": "light",
          "label": "t:settings.color_scheme.light"
        },
        {
          "value": "dark",
          "label": "t:settings.color_scheme.dark"
        }
      ],
      "default": "light"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:password.background_image"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "t:password.show_social",
      "default": true
    }
  ]
}
{% endschema %}
